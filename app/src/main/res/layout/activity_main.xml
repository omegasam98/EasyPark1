<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="76dp"
        android:layout_y="219dp"
        android:text="User Name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="77dp"
        android:layout_y="273dp"
        android:text="password" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_x="162dp"
        android:layout_y="205dp"
        android:id="@+id/us"
        android:inputType="textEmailAddress" />

    <EditText
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_x="162dp"
        android:id="@+id/pas"
        android:layout_y="267dp"
        android:inputType="textPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="157dp"
        android:id="@+id/log"
        android:layout_y="362dp"
        android:text="Login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="134dp"
        android:layout_y="481dp"
        android:text="Forgot password?"
        android:id="@+id/fg"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="259dp"
        android:layout_y="481dp"
        android:text="New User?"
        android:id="@+id/nw"/>


</AbsoluteLayout>